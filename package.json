{
	"name": "reui-monorepo",
	"author": "<paul@spaceyak.com>",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"clean": "yarn rimraf packages/@reui/*/dist index.d.ts",
		"prebuild": "yarn clean",
		"build": "node scripts/build.mjs",
		"docs": "yarn workspace docs css --watch & yarn workspace docs start &",
		"format": "prettier --ignore-unknown",
		"lint": "eslint . --cache --ext .cjs,.js,.ts,.tsx",
		"pre-release": "release-it --preRelease=alpha",
		"release": "release-it",
		"test": "jest",
		"tsc:check": "tsc -p tsconfig.check.json"
	},
	"workspaces": [
		"docs",
		"packages/*",
		"packages/@reui/*"
	],
	"devDependencies": {
		"@parcel/bundler-experimental": "^2.7.0",
		"@parcel/packager-ts": "2.7.0",
		"@parcel/resolver-glob": "^2.7.0",
		"@parcel/transformer-typescript-types": "2.7.0",
		"@release-it-plugins/workspaces": "^3.2.0",
		"@release-it/conventional-changelog": "^5.1.0",
		"@reui/eslint-plugin": "workspace:packages/eslint-plugin",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/glob": "^8",
		"@types/jest": "^29.0.0",
		"@types/rimraf": "^3",
		"esbuild": "^0.15.7",
		"esbuild-jest": "^0.5.0",
		"esbuild-node-externals": "^1.5.0",
		"eslint": "^8.23.0",
		"glob": "^8.0.3",
		"jest": "^29.0.2",
		"jest-environment-jsdom": "^29.0.2",
		"lint-staged": "^13.0.3",
		"parcel": "^2.7.0",
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"release-it": "^15.4.1",
		"rimraf": "^3.0.2",
		"typescript": "~4.7.0"
	},
	"version": "0.1.0"
}
