		"packages/*",
		"packages/@reui/*"
	],
	"devDependencies": {
		"@reui/eslint-plugin": "workspace:packages/eslint-plugin",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/jest": "^29.0.0",
		"esbuild": "^0.15.7",
		"esbuild-jest": "^0.5.0",
		"eslint": "^8.23.0",
		"jest": "^29.0.2",
		"jest-environment-jsdom": "^29.0.2",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"typescript": "^4.8.2"
	}
}
